@model DiarioPolitico.Models.Usuario

@{
    ViewBag.Title = "Diario Politico";
    Layout = "~/Views/Shared/_cero.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm()) 
{
    
<div class="form-horizontal">
    <h4>Login</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-group">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            <span class="text-danger">@ViewBag.errEmail</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
            <span class="text-danger">@ViewBag.errPass</span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Loguearse" class="btn btn-default" />
        </div>
    </div>
    <span class="text-danger">@ViewBag.errUser</span>
</div>
}

<div>
    @Html.ActionLink("Crear Cuenta", "Create")
</div>
